{
  "name": "website-cms",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "set NODE_ENV=development&& ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "start": "set NODE_ENV=production&& node dist/src/app.js",
    "db:migrate": "npx prisma generate && npx prisma migrate dev --name user-entity --create-only",
    "db:push": "npx prisma db push",
    "build": "rimraf dist && tsc && copyfiles -u 1 src/views/**/*.hbs dist/src && copyfiles -u 1 public/favicon.ico dist/public",
    "add-build": "git add dist",
    "lint": "eslint",
    "format": "eslint --fix",
    "test": "npx lint",
    "prepare": "husky",
    "seed": "ts-node prisma/seed.ts",
    "postinstall": "prisma generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/config": "^3.3.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.11.18",
    "@types/nodemailer": "^6.4.14",
    "@types/serve-favicon": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "prisma": "^6.5.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.705.0",
    "@aws-sdk/credential-provider-node": "^3.699.0",
    "@prisma/client": "^6.5.0",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.11",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.4",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "juice": "^11.0.1",
    "lint-staged": "^16.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nodemailer": "^6.9.9",
    "prettier": "^3.4.2",
    "prisma-better-errors": "^1.0.4",
    "redis": "^4.6.13",
    "rimraf": "^6.0.1",
    "serve-favicon": "^2.5.1",
    "ts-node-dev": "^2.0.0",
    "zod": "^3.22.4"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
